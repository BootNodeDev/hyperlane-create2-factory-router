{
  "name": "@BootNodeDev/hyperlane-create2-factory-router",
  "description": "",
  "version": "0.0.1",
  "author": {
    "name": "BootNodeDev",
    "url": "https://github.com/BootNodeDev"
  },
  "dependencies": {
    "@hyperlane-xyz/core": "^5.1.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^v4.9.3",
    "dotenv-run-script": "^0.4.1"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out && forge clean",
    "build": "forge build",
    "lint": "yarn run lint:sol && yarn run prettier:check",
    "lint:sol": "forge fmt --check && yarn solhint '{script,src,test}/**/*.sol'",
    "sol:fmt": "forge fmt",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test -vvv",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "deployRouter": "forge script script/DeployRouter.s.sol:DeployRouter -f $NETWORK --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY --chain $NETWORK --slow -vvvv",
    "run:deployRouter": "dotenv-run-script deployRouter",
    "deployICARouter": "forge script script/DeployICARouter.s.sol:DeployICARouter -f $NETWORK --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY --chain $NETWORK --slow -vvvv",
    "run:deployICARouter": "dotenv-run-script deployICARouter",
    "deployHypERC20Imple": "forge script script/DeployHypERC20Imple.s.sol:DeployHypERC20Imple -f $NETWORK --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY --chain $NETWORK --slow -vvvv",
    "run:deployHypERC20Imple": "dotenv-run-script deployHypERC20Imple",
    "enrollRouters": "forge script script/EnrollRouters.s.sol:EnrollRouters -f $NETWORK --broadcast --slow -vvvv",
    "run:enrollRouters": "dotenv-run-script enrollRouters",
    "interchainDeploy": "forge script script/InterchainDeployExample.s.sol:InterchainDeployExample -f $NETWORK --broadcast --slow -vvvv",
    "run:interchainDeploy": "dotenv-run-script interchainDeploy",
    "deployWarp": "forge script script/DeployWarp.s.sol:DeployWarp -f $NETWORK --broadcast --verify --slow -vvv --via-ir",
    "run:deployWarp": "dotenv-run-script deployWarp",
    "transferRemote": "forge script script/TransferRemote.s.sol:TransferRemote -f $NETWORK --broadcast --slow -vvv --via-ir",
    "run:transferRemote": "dotenv-run-script transferRemote",
    "bumpGas": "forge script script/BumpGas.s.sol:BumpGas -f $NETWORK --broadcast --slow -vvv --via-ir",
    "run:bumpGas": "dotenv-run-script bumpGas",
    "deployMulticallFactory": "forge script script/DeployMulticallFactory.s.sol:DeployMulticallFactory -f $NETWORK --broadcast --verify --slow -vvv --via-ir",
    "run:deployMulticallFactory": "dotenv-run-script deployMulticallFactory"
  }
}
